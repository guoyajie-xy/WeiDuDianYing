<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <!--定位-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="30dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/homelist_dingwei1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="北京"
                android:textColor="#333333"
                android:textSize="16sp" />
        </LinearLayout>

        <!--推荐影院——附近影院-->
        <RadioGroup
            android:id="@+id/fraglist_radioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/fraglist_radio1"
                android:layout_width="90dp"
                android:layout_height="35dp"
                android:background="@drawable/sele_cinema_radio"
                android:button="@null"
                android:gravity="center"
                android:text="推荐影院"
                android:textSize="14sp" />

            <RadioButton
                android:id="@+id/fraglist_radio2"
                android:layout_width="90dp"
                android:layout_height="35dp"
                android:background="@drawable/sele_cinema_radio"
                android:button="@null"
                android:gravity="center"
                android:layout_marginLeft="35dp"
                android:text="推荐影院"
                android:textSize="14sp" />
        </RadioGroup>
        <android.support.v4.view.ViewPager
            android:id="@+id/fraglist_page1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp">

        </android.support.v4.view.ViewPager>

    </LinearLayout>
</RelativeLayout>