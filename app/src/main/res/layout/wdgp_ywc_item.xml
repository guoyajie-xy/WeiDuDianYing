<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/my_circle"
    android:layout_marginTop="20dp"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/gp_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="铁血战士"
                android:textSize="15sp"
                android:textStyle="bold" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/gp_ywc_start_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#f77421"
                android:text="14:40:00"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#f77421"
                android:text="-"/>
            <TextView
                android:id="@+id/gp_ywc_end_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#f77421"
                android:text="16:49:00"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#f77421"
                android:text="开始时间"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textColor="#f77421"
                android:text="结束时间"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单号:"/>
        <TextView
            android:id="@+id/gp_ywc_ddh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="285707580975"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="下单时间:"/>
            <TextView
                android:id="@+id/gp_ywc_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2018-06-09 14:52"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="影院:"/>
            <TextView
                android:id="@+id/gp_ywc_yy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="保利国际影城(龙旗广场店)"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="影厅:"/>
            <TextView
                android:id="@+id/gp_ywc_yt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="中影IDo巨幕全景声厅"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="数量:"/>
            <TextView
                android:id="@+id/gp_ywc_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2张"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="金额:"/>
            <TextView
                android:id="@+id/gp_ywc_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="59.9元"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
