<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/moviesdetail_bg"
    android:padding="20dp"
    tools:context=".activity.MoviesDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!--电影详情-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/moviesdetail_pic_title"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/moviesdetail_movie" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:text="电影详情"
                android:textColor="#fff"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <CheckBox
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/sele_homelistfrag"
                android:button="@null" />
        </LinearLayout>

        <TextView
            android:id="@+id/moviesdetail_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:text="铁血战士"
            android:textColor="#fff"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/moviesdetail_image"
            android:layout_width="220dp"
            android:layout_height="320dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:src="@mipmap/home_xuanzhuan_tiexue" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/moviesdetail_xiangqing"
                android:layout_width="62dp"
                android:layout_height="32dp"
                android:background="@drawable/shape_movies_button"
                android:text="详情"
                android:textColor="#fff"
                android:textSize="14sp" />

            <Button
                android:id="@+id/moviesdetail_yugao"
                android:layout_width="62dp"
                android:layout_height="32dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/shape_movies_button"
                android:text="预告"
                android:textColor="#fff"
                android:textSize="14sp" />

            <Button
                android:id="@+id/moviesdetail_juzhao"
                android:layout_width="62dp"
                android:layout_height="32dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/shape_movies_button"
                android:text="剧照"
                android:textColor="#fff"
                android:textSize="14sp" />

            <Button
                android:id="@+id/moviesdetail_yingping"
                android:layout_width="62dp"
                android:layout_height="32dp"
                android:background="@drawable/shape_movies_button"
                android:text="影评"
                android:textColor="#fff"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/moviesdetail_return"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@mipmap/homelist_return" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/moviesdetail_buy"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@drawable/shape_movies_button_buy"
            android:text="购票"
            android:textColor="#fff"
            android:textSize="16sp" />
    </LinearLayout>
</RelativeLayout>